<Window x:Class="BackupUtil.Ui.View.ConfigureJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BackupUtil.Ui.View"
        mc:Ignorable="d"
        Title="ConfigureJobWindow" Height="300" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="30,30,30,30">
            <TextBlock Text="Name:" Margin="0,0,0,5" />
            <TextBox x:Name="NameInput"
                     Width="140" HorizontalAlignment="Center"/>

            <Button Content="Send" Click="SendJobData"/>
        </StackPanel>

    </Grid>
</Window>

